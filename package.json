{
	"name": "jaya",
	"version": "1.0.0",
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"browserslist": [
		"last 2 versions",
		"> 2%",
		"maintained node versions",
		"not dead"
	],
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "script"
		},
		"extends": [
			"eslint:recommended",
			"prettier"
		],
		"env": {
			"browser": true,
			"commonjs": true,
			"es6": true,
			"node": true,
			"jest": true,
			"mongo": true,
			"worker": true,
			"amd": true
		},
		"rules": {
			"no-console": "off",
			"no-unused-vars": "warn",
			"no-undef": "warn",
			"no-useless-escape": "warn",
			"no-prototype-builtins": "warn",
			"no-fallthrough": "warn",
			"no-func-assign": "warn",
			"no-empty": "warn",
			"no-self-assign": "warn",
			"no-cond-assign": "warn",
			"no-constant-condition": "warn",
			"no-unsafe-finally": "warn"
		}
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"overrides": [
			{
				"files": "*.pug",
				"options": {
					"parser": "pug",
					"singleQuote": true,
					"tabWidth": 4,
					"useTabs": true
				}
			},
			{
				"files": ".scss",
				"options": {
					"parser": "scss",
					"singleQuote": true,
					"tabWidth": 4,
					"useTabs": true
				}
			}
		]
	},
	"description": "Proyecto de prueba como desarrollador Nodejs",
	"main": "app.js",
	"scripts": {
		"dev": "nodemon app.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/roganoalien/jaya-test.git"
	},
	"author": "@roganoalien",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/roganoalien/jaya-test/issues"
	},
	"homepage": "https://github.com/roganoalien/jaya-test#readme",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.0",
		"connect-flash": "^0.1.1",
		"dotenv": "^8.1.0",
		"express": "^4.17.1",
		"express-session": "^1.16.2",
		"express-validator": "^6.2.0",
		"line-reader": "^0.4.0",
		"mongoose": "^5.7.3",
		"morgan": "^1.9.1",
		"multer": "^1.4.2",
		"passport": "^0.4.0",
		"passport-local": "^1.0.0",
		"pug": "^2.0.4",
		"serve-favicon": "^2.5.0",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@babel/core": "^7.6.2",
		"@babel/preset-env": "^7.6.2",
		"@editorjs/delimiter": "^1.1.0",
		"@editorjs/editorjs": "^2.15.1",
		"@editorjs/embed": "^2.2.1",
		"@editorjs/header": "^2.3.0",
		"@editorjs/inline-code": "^1.3.0",
		"@editorjs/link": "^2.1.3",
		"@editorjs/quote": "^2.3.0",
		"@editorjs/simple-image": "^1.3.3",
		"@editorjs/table": "^1.2.0",
		"@prettier/plugin-pug": "^1.0.4",
		"eslint": "^6.5.1",
		"eslint-config-prettier": "^6.4.0",
		"eslint-plugin-prettier": "^3.1.1",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^7.0.1",
		"gulp-babel": "^8.0.0",
		"gulp-clean-css": "^4.2.0",
		"gulp-concat": "^2.6.1",
		"gulp-minify": "^3.1.0",
		"gulp-purgecss": "^1.2.0",
		"gulp-rename": "^1.4.0",
		"gulp-sass": "^4.0.2",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-uglify": "^3.0.2",
		"husky": "^3.0.8",
		"lint-staged": "^9.4.1",
		"nodemon": "^1.19.3",
		"notyf": "^3.0.4",
		"prettier": "^1.18.2",
		"tailwindcss": "^1.1.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
